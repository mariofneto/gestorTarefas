@model gestorTarefas.Models.Tarefa

@{
    ViewData["Title"] = "Buscar tarefa";
}

<h1>Buscar Tarefa por Titulo</h1>
<hr>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Buscar">
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control"/>
            
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary">
            </div>
        </form>
        <br>
        <br>

        <div style="width: 800px;">
            <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => x.Titulo):
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(x => x.Titulo)
            </dt>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => x.Descricao):
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(x => x.Descricao)
            </dt>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => x.Data):
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(x => x.Data)
            </dt>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(x => x.Status):
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayFor(x => x.Status)
            </dt>
            </dl>
        </div>

    </div>
</div>